                "stopAtEntry": false,
                "console": "internalConsole"
            },
        },
        {
            "name": "C#: bru extract",
            "type": "dotnet",
            "request": "launch",
            "projectPath": "${workspaceFolder}\\brutool.csproj",
            "launchConfigurationId": "TargetFramework=;brutool",
            "windows": {
                "args": ["bru", "extract", "data\\vc.tx.bru", "-o", "vc.txt", "-e", "textkoi7"],
                "cwd": "${workspaceFolder}",
                "stopAtEntry": false,
                "console": "internalConsole"
            },
        },
        {
            "name": "C#: bru list",
            "type": "dotnet",
            "request": "launch",
            "projectPath": "${workspaceFolder}\\brutool.csproj",
