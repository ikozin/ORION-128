    "version": "0.2.0",
    "configurations": [
        {
            "name": "C#: bru new",
            "type": "dotnet",
            "request": "launch",
            "projectPath": "${workspaceFolder}\\brutool.csproj",
            "launchConfigurationId": "TargetFramework=;brutool",
            "windows": {
                "args": ["bru", "new", "vc$.bru", "-a", "AD00", "-s", "vc.bin"],
